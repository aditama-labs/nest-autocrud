{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "../plugins",
    "skipLibCheck": true,
  },
  "include": [
    "index.ts",
    "prisma/**/*",
    "skeleton/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts",
  ]
}